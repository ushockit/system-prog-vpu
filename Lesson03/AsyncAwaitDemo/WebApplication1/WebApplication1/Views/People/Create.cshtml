@model WebApplication1.Models.People.CreatePersonModel

<form asp-antiforgery="true" method="post">
    <div>
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label for="first-name-input">First name</label>
            <input type="text" asp-for="FirstName" class="form-control" id="first-name-input" aria-describedby="emailHelp">
            <span class="form-text" asp-validation-for="FirstName"></span>
        </div>
        <div class="form-group">
            <label for="last-name-input">Last name</label>
            <input type="text" asp-for="LastName" class="form-control" id="last-name-input" aria-describedby="emailHelp">
            <span class="form-text" asp-validation-for="LastName"></span>
        </div>
        <div class="form-group">
            <label for="birth-input">Birth</label>
            <input type="date" asp-for="Birth" class="form-control" id="birth-input" aria-describedby="emailHelp">
            <span class="form-text" asp-validation-for="Birth"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
